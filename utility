package gremlinrunner;
/**
	* This is a utility class for any program 
	* Some things here are generic code 
	* Some are also taken from Stack overflow questions 
	* I do not claim ownership of this class 
	*/

import java.security.SecureRandom;
import java.util.Random;
import java.util.Scanner;

/**
 *
 * @author rohan
 */

public class utility {

	/**
	 * Returns a letter (or word the user types)
	 *
	 * @param Prompt for the user
	 * @return a string
	 */
	public static String getStringFromUser(String Prompt) {
		System.out.println(Prompt);
		Scanner sc = new Scanner(System.in);
		return (sc.nextLine());
	}

	/**
	 *
	 * @param max is the maximum integer
	 * @return a random from 0 inclusive to max exclusive
	 */
	public static int getRandom(int max) {
Random r = new Random();
		return r.nextInt(max);
	}

		/**
	 *
	 * @param max is the maximum integer
	 * @return a random from 0 inclusive to max exclusive
	 */
	public static int getSecureRandom(int max){
	SecureRandom r=new SecureRandom();
	return r.nextInt(max);
}
	/**
	 * Gets an integer from user
	 *
	 * @param prompt
	 * @return an integer
	 */
	public static int getIntFromUser(String prompt) {
		System.out.println(prompt);
		Scanner sc = new Scanner(System.in);
		return (sc.nextInt());
	}

	/**
	 *From Stack overflow question on reversing arrays
	 * @param nums array to be reverse
	 * @return reversed array
	 */
	public static int[] reverse(int[] nums) {
		int[] reversed = new int[nums.length];
		for (int i = 0; i < nums.length; i++) {
			reversed[i] = nums[nums.length - 1 - i];
		}
		return reversed;
	}

	/**
	 * Removes duplicates
	 * From Stack overflow question on how to remove duplicates
	 * @param arr is an array to remove duplicates
	 * @return an array without duplicates
	 */
	public static int[] removeDuplicates(int[] arr) {

		int end = arr.length;

		for (int i = 0; i < end; i++) {
			for (int j = i + 1; j < end; j++) {
				if (arr[i] == arr[j]) {
					int shiftLeft = j;
					for (int k = j + 1; k < end; k++, shiftLeft++) {
						arr[shiftLeft] = arr[k];
					}
					end--;
					j--;
				}
			}
		}

		int[] whitelist = new int[end];
		for (int i = 0; i < end; i++) {
			whitelist[i] = arr[i];
		}
		return whitelist;
	}
}


